{
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "useBlockStatements": true,
      "useCollapsedElseIf": true,
      "useConsistentArrayType": true,
      "useFragmentSyntax": true,
      "useShorthandArrayType": true,
      "noConsole": true
    }
  },
  "files": {
    "ignore": ["public"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
