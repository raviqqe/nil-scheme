{
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useBlockStatements": { "level": "error" },
        "useCollapsedElseIf": { "level": "error" },
        "useConsistentArrayType": { "level": "error" },
        "useFragmentSyntax": { "level": "error" },
        "useShorthandArrayType": { "level": "error" }
      },
      "nursery": {
        "noConsole": { "level": "error" }
      }
    }
  },
  "files": {
    "ignore": ["public"]
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
