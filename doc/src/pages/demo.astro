---
import { compile, run } from "@raviqqe/stak";

const source = `
(import (scheme write))

(display "Hello, world!")
`.trim();

const output = "";
---

<html lang="en">
  <head>
    <title>Stak Scheme demo</title>
  </head>
  <body>
    <style>
      html {
        width: 100vw;
        height: 100vh;
        overflow: hidden;

        font-size: 16px;
        font-family: sans-serif;
      }

      body {
        widht: 100%;
        height: 100%;
        padding: 0;
        margin: 0;
      }

      form,
      .input {
        width: 100%;
        height: 100%;
        box-sizing: border-box;
        overflow: hidden;

        padding: 1rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: stretch;

        * {
          flex: 1;
        }
      }

      textarea {
        overflow: auto;
        resize: none;
      }
    </style>
    <form>
      <textarea>{source}</textarea>
      <div>
        <button>Run</button>
      </div>
    </form>
    <pre>
      <code>
        {output}
      </code>
    </pre>
  </body>
</html>
