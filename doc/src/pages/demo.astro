---
import { compile, run } from "@raviqqe/stak";
import { atom, computed } from "nanostores";
import { DemoForm } from "../components/DemoForm";
import { DemoOutput } from "../components/DemoOutput";

const source = atom(
  `
(import (scheme write))

(display "Hello, world!")
  `.trim(),
);

const output = computed(source, (source) =>
  new TextDecoder().decode(
    run(compile(source), new Uint8Array(0), Math.pow(2, 20)),
  ),
);
---

<html lang="en">
  <head>
    <title>Stak Scheme demo</title>
  </head>
  <body class="container">
    <style>
      * {
        box-sizing: border-box;
      }

      html {
        width: 100vw;
        height: 100vh;
        overflow: hidden;

        font-size: 16px;
        font-family: sans-serif;
      }

      .container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: stretch;
      }

      body {
        width: 100%;
        height: 100%;
        padding: 0;
        margin: 0;
      }

      form {
        width: 100%;
        height: 100%;
        overflow: hidden;

        padding: 1rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: stretch;

        * {
          flex: 1;
        }
      }

      textarea {
        overflow: auto;
        resize: none;
      }
    </style>
    <DemoForm source={source} />
    <DemoOutput output={output} />
  </body>
</html>
