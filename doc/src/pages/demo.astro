---
import { DemoForm } from "../components/DemoForm";
import { DemoOutput } from "../components/DemoOutput";
---

<html lang="en">
  <head>
    <title>Stak Scheme demo</title>
  </head>
  <body>
    <style>
      * {
        box-sizing: border-box;
      }

      html {
        width: 100vw;
        height: 100vh;
        overflow: hidden;

        font-size: 16px;
        font-family: sans-serif;
      }

      body {
        width: 100%;
        height: 100%;
        padding: 0;
        margin: 0;

        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: stretch;

        * {
          flex: 1;
        }
      }
    </style>
    <DemoForm client:load />
    <DemoOutput client:load />
  </body>
</html>
