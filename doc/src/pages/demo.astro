---
import { compile, run } from "@raviqqe/stak";

const source = `
(import (scheme write))

(display "Hello, world!")
`.trim();

let output = "";

const submit = () => {
  output = "ok";
};
---

<html lang="en">
  <head>
    <title>Stak Scheme demo</title>
  </head>
  <body class="container">
    <style>
      * {
        box-sizing: border-box;
      }

      html {
        width: 100vw;
        height: 100vh;
        overflow: hidden;

        font-size: 16px;
        font-family: sans-serif;
      }

      .container {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: stretch;
      }

      body {
        width: 100%;
        height: 100%;
        padding: 0;
        margin: 0;
      }

      form {
        width: 100%;
        height: 100%;
        overflow: hidden;

        padding: 1rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        align-items: stretch;

        * {
          flex: 1;
        }
      }

      textarea {
        overflow: auto;
        resize: none;
      }
    </style>
    <pre>
      <code>
        {output}
      </code>
    </pre>
  </body>
</html>
